<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Photo.AddPhoto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AddPhoto"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.057" />

        <Button
            android:id="@+id/bttncam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:text="Camera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/radioGroup"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="@+id/radioGroup" />

        <ImageButton
            android:id="@+id/imagebttn"
            android:layout_width="104dp"
            android:layout_height="90dp"
            android:layout_marginTop="64dp"
            android:src="@drawable/ic_menu_camera"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="296dp"
            android:layout_height="182dp"
            android:layout_marginBottom="-50dp"
            app:layout_constraintBottom_toTopOf="@+id/bttncam"
            app:layout_constraintEnd_toEndOf="@+id/imagebttn"
            app:layout_constraintStart_toStartOf="@+id/imagebttn"
            app:layout_constraintTop_toBottomOf="@+id/imagebttn">

            <CheckBox
                android:id="@+id/box1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spor" />

            <CheckBox
                android:id="@+id/box2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gıda" />

            <CheckBox
                android:id="@+id/box3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Moda" />

            <CheckBox
                android:id="@+id/box4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eğitim" />
        </RadioGroup>

        <Button
            android:id="@+id/bttnPay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Paylaş"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/bttncam"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/bttncam"
            app:layout_constraintTop_toBottomOf="@+id/bttncam"
            app:layout_constraintVertical_bias="0.288" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>